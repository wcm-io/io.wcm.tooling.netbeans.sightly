<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.wcm</groupId>
    <artifactId>io.wcm.tooling.parent</artifactId>
    <version>1.1.0</version>
    <relativePath/>
  </parent>

  <groupId>io.wcm.tooling.netbeans</groupId>
  <artifactId>io.wcm.tooling.netbeans.sightly</artifactId>
  <version>1.1.1-SNAPSHOT</version>
  <packaging>nbm</packaging>

  <name>Netbeans Sightly Extension</name>
  <description>Module for Netbeans to support sightly autocompletion.</description>

  <scm>
    <connection>scm:git:https://github.com/wcm-io/io.wcm.tooling.netbeans.sightly.git</connection>
    <developerConnection>scm:git:https://github.com/wcm-io/io.wcm.tooling.netbeans.sightly.git</developerConnection>
    <url>https://github.com/wcm-io/io.wcm.tooling.netbeans.sightly</url>
    <tag>HEAD</tag>
  </scm>

  <properties>
    <site.url.module.prefix>tooling/netbeans/sightly</site.url.module.prefix>
    <netbeans.version>RELEASE80</netbeans.version>
  </properties>

  <build>
    <plugins>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>nbm-maven-plugin</artifactId>
        <version>3.14</version>
        <extensions>true</extensions>
        <configuration>
          <licenseName>Apache License, Version 2.0</licenseName>
          <licenseFile>../../../LICENSE</licenseFile>
          <homePageUrl>https://wcm.io/tooling/netbeans/sightly/</homePageUrl>
          <useOSGiDependencies>false</useOSGiDependencies>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <!-- downgrade to version 2.6, custom property 'useDefaultManifestFile' needs to be migrated -->
        <configuration>
          <useDefaultManifestFile>true</useDefaultManifestFile>
        </configuration>
      </plugin>

    </plugins>
    <pluginManagement>
      <plugins>

        <!-- downgrade to version 2.6, custom property 'useDefaultManifestFile' needs to be migrated -->
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-jar-plugin</artifactId>
          <version>2.6</version>
        </plugin>

      </plugins>
    </pluginManagement>
  </build>

  <dependencies>

    <dependency>
      <groupId>org.netbeans.api</groupId>
      <artifactId>org-netbeans-api-annotations-common</artifactId>
      <scope>compile</scope>
      <version>${netbeans.version}</version>
    </dependency>
    <dependency>
      <groupId>org.netbeans.api</groupId>
      <artifactId>org-netbeans-modules-editor-completion</artifactId>
      <scope>compile</scope>
      <version>${netbeans.version}</version>
    </dependency>
    <dependency>
      <groupId>org.netbeans.api</groupId>
      <artifactId>org-netbeans-api-java-classpath</artifactId>
      <scope>compile</scope>
      <version>${netbeans.version}</version>
    </dependency>
    <dependency>
      <groupId>org.netbeans.api</groupId>
      <artifactId>org-netbeans-modules-java-source</artifactId>
      <scope>compile</scope>
      <version>${netbeans.version}</version>
    </dependency>
    <dependency>
      <groupId>org.netbeans.api</groupId>
      <artifactId>org-netbeans-modules-editor-mimelookup</artifactId>
      <scope>compile</scope>
      <version>${netbeans.version}</version>
    </dependency>
    <dependency>
      <groupId>org.netbeans.external</groupId>
      <artifactId>org-apache-commons-lang</artifactId>
      <scope>compile</scope>
      <version>${netbeans.version}</version>
    </dependency>
    <dependency>
      <groupId>org.netbeans.api</groupId>
      <artifactId>org-openide-util</artifactId>
      <scope>compile</scope>
      <version>${netbeans.version}</version>
    </dependency>
    <dependency>
      <artifactId>org-openide-filesystems</artifactId>
      <groupId>org.netbeans.api</groupId>
      <scope>compile</scope>
      <version>${netbeans.version}</version>
    </dependency>
    <dependency>
      <artifactId>org-netbeans-libs-javacapi</artifactId>
      <groupId>org.netbeans.api</groupId>
      <scope>compile</scope>
      <version>${netbeans.version}</version>
    </dependency>
    <dependency>
      <artifactId>org-openide-loaders</artifactId>
      <groupId>org.netbeans.api</groupId>
      <scope>compile</scope>
      <version>${netbeans.version}</version>
    </dependency>
    <dependency>
      <artifactId>org-netbeans-modules-editor</artifactId>
      <groupId>org.netbeans.api</groupId>
      <scope>compile</scope>
      <version>${netbeans.version}</version>
    </dependency>
    <dependency>
      <artifactId>org-netbeans-modules-projectapi</artifactId>
      <groupId>org.netbeans.api</groupId>
      <scope>compile</scope>
      <version>${netbeans.version}</version>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <artifactId>org.apache.sling.models.api</artifactId>
      <groupId>org.apache.sling</groupId>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <profiles>
    <!-- This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself. -->
    <profile>
      <id>only-eclipse</id>
      <activation>
        <property>
          <name>m2e.version</name>
        </property>
      </activation>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.eclipse.m2e</groupId>
              <artifactId>lifecycle-mapping</artifactId>
              <version>1.0.0</version>
              <configuration>
                <lifecycleMappingMetadata>
                  <pluginExecutions>
                    <pluginExecution>
                      <pluginExecutionFilter>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>nbm-maven-plugin</artifactId>
                        <versionRange>[3.13.3,)</versionRange>
                        <goals>
                          <goal>manifest</goal>
                        </goals>
                      </pluginExecutionFilter>
                      <action>
                        <ignore />
                      </action>
                    </pluginExecution>
                  </pluginExecutions>
                </lifecycleMappingMetadata>
              </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>
  </profiles>

  <distributionManagement>
    <site>
      <id>${site.deploy.id}</id>
      <url>${site.deploy.url}</url>
    </site>
  </distributionManagement>

</project>
